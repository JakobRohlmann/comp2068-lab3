<% include ../partials/header %>

<section>
  <div>
    <a href="/books/new">New Book</a>
  </div>

  <div class="row">

    <% for ( let book of books ) { %>
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              Title: <%= book.title %>
            </h5>

            <p>
              Description: <%= book.description %>
            </p>

            <p>
              Author: <%= book.author %>
            </p>

            <p>
              Price: $<%= book.price %>
            </p>
          </div>
        </div>
      </div>
    <% } %>

  </div>
</section>

<% include ../partials/footer %>
